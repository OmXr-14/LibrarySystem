<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.LibrarySystem.LibraryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Libri attualmente disponibili:" />
    
    <ListView fx:id="listViewLibri" prefHeight="200.0" prefWidth="400.0" />

    <HBox spacing="10.0">
        <ComboBox fx:id= "comboUtenti" promptText="Seleziona un Utente" prefWidth="150.0" />
        <TextField fx:id="inputIdLibro" promptText="ID Libro (es.1)" />
    </HBox>

    <HBox spacing="10.0">
        <Button onAction="#gestisciPrestito" text="Presta Libro" />
    </HBox>
</VBox>