<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="832.0" prefWidth="1206.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.LibrarySystem.LibraryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="30.0" prefWidth="695.0">
      <children>
         <Label prefHeight="17.0" prefWidth="350.0" text="Libri disponibili" />
         <Label prefHeight="17.0" prefWidth="350.0" text="Libri non disponibili" textAlignment="RIGHT" />
      </children>
   </HBox>
   <HBox prefHeight="425.0" prefWidth="1000.0">
      <children>
         <ListView fx:id="listViewLibriD" prefWidth="500.0" />
         <ListView fx:id="listViewLibriN" prefHeight="425.0" prefWidth="500.0" />
      </children>
   </HBox>

    <HBox spacing="10.0">
        <ComboBox fx:id="comboUtenti" prefWidth="150.0" promptText="Seleziona un Utente" />
        <ComboBox fx:id="comboLibri" prefWidth="150.0" promptText="Seleziona un Libro" />
    </HBox>

    <HBox spacing="10.0">
        <Button onAction="#gestisciPrestito" text="Presta Libro" />
        <Button onAction="#gestisciRestituzione" text="Restituisci Libro" />
    </HBox>
</VBox>
